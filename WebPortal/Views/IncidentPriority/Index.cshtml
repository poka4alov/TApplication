@using System.Web.Optimization
@{
	ViewBag.Title = "Index";
}
@Scripts.Render("~/Bundles/data_table")

<div class="row">
	<div class="col-xs-12">
		<div class="box box-default">
			<div class="box-header">
				<h3 class="box-title">Priority</h3>
			</div>
			<div class="box-body">
				<div class="form-group">
					<div>
						<table id="incidentPriorityTable"></table>
